clc 
clear 
close 
x=input('enter the sequence :') 
h=input('enter the sequence:') 
y=conv(x,h) 
subplot(3,1,1); 
plot2d3(x); 
xlabel('samples'); 
ylabel('amplitude'); 
title('Linear Convolution of signals'); 
subplot(3,1,2); 
plot2d3(h); 
xlabel('samples'); 
ylabel('amplitude'); 
 
subplot(3,1,3); 
plot2d3(y); 
xgrid(5, 1, 7) 
xlabel('samples'); 
ylabel('amplitude'); 
disp('x=',x) 
disp('h=',h) 
disp('Y=',y)
